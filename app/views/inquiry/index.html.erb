<%= render 'layouts/header' %>
<div class="inquiry-index">
  <%= form_for @inquiry, :url => inquiry_confirm_path do |f| %>

    <h2 class="inquiry-index-title">お問い合わせフォーム</h2>

    <% if @inquiry.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <strong>入力内容にエラーがあります</strong>
        <ul>
          <% @inquiry.errors.each do |attr, msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="inquiry-index-box">
      <%= f.hidden_field :name, value: @user.name %>
      <%= f.hidden_field :email, value: @user.email %>
      <%= f.text_area :message, class:"inquiry-index-form-message-self" %>
      <div class="inquiry-index-form-submit">
        <%= f.submit '確認画面へ', class:'btn btn-info inquiry-index-form-submit-self' %>
      </div>
    </div>
  <% end %>
</div>

