<div class="">
  <% if cards.count == 0 %>
    カードはまだありません．
  <% else %>
    <div class="cardlist-dam-item-box">

      <% cards.each do |c| %>
        <div class="cardlist-dam-item">
          <div class="cardlist-dam-item-name">
            <% if !c.dam_name.blank? %>
              <div class="cardlist-dam-item-name-y"><%= c.dam_name%></div>
            <% else %>
              NO NAME
            <% end %>
            <% if @cards %>
            <% end %>
          </div>
          <div class="cardlist-dam-item-image">
              <%= link_to card_path(c), class: "" do %>
                <%= attachment_image_tag c, :card_image, size: '200x150', format: 'jpeg', fallback: "dam_no_image.jpeg", class:"" %>
              <% end %>
          </div>
          <div class="cardlist-dam-item-ver">
            Ver.<%= c.version_bf %>.<%= c.version_af %>(<%= c.version_y %>.<%= c.version_m %>)
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>