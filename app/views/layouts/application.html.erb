<!DOCTYPE html>
<html>
  <head>
    <title>Damour</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="//maps.google.com/maps/api/js?key="ENV[GOOGLE_MAP_API_KEY]"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>

  </head>

  <body>
    <div>
      <% if user_signed_in? %>
        <%= link_to 'トップ', dams_top_path, class:"btn btn-primary" %>
        <%= link_to 'カードトップ', card_path(current_user), class:"btn btn-primary" %>
        <%= link_to 'マイページ', user_path(current_user), class:"btn btn-success" %>
        <%= link_to 'カード配布場所', facilities_path, class:"btn btn-success" %>
        <%= link_to 'ダム登録', new_dam_path, class:"btn btn-warning" %>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class:"btn btn-danger" %>
      <% elsif admin_signed_in? %>
        <%= link_to 'トップ', dams_top_path, class:"btn btn-primary" %>
        <%= link_to 'マイページ', admin_path(current_admin), class:"btn btn-success" %>
        <%= link_to 'カード配布場所', facilities_path, class:"btn btn-success" %>
        <%= link_to 'ダム登録', new_dam_path, class:"btn btn-warning" %>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class:"btn btn-danger" %>
      <% else %>
        <%= link_to 'ユーザー会員登録', new_user_registration_path, class:"btn btn-primary" %>
        <%= link_to 'ユーザーログイン', new_user_session_path, class:"btn btn-success" %>
        <%= link_to '管理者ログイン', new_admin_session_path, class:"btn btn-warning" %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
