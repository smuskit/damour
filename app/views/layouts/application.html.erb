<!DOCTYPE html>
<html  lung="ja">
  <head>
    <title>Damour</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

  </head>
  <%if user_signed_in? %>
    <%= link_to cardlist_path(current_user), class:"my-parts" do %>
      <span class="my-parts-text">ダムカード<br>コレクション<span>
    <% end %>
  <% else %>
  <% end %>

  <body>
    <%= render 'cards/alert' %>
    <%= yield %>
  </body>
<br>
<br>
<br>
  <footer class="footer mt-auto py-3">
    <div class='container'>
      <div class='row'>
        <div class='col-xs-3 col-xs-offset-9 footer-text'>
          CopyRight damour.inc
        </div>
      </div>
    </div>
  </footer>

</html>
