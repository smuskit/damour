<% @dam_comments.each do |c| %>
  <div class="comment-item">
    <div class="comment-item-visit-date">
      投稿日時：<%= c.created_at.strftime('%Y/%m/%d') %>
    </div>
    <div class="comment-item-profile-image">
      <%= attachment_image_tag c.user, :profile_image, size: '40x40', format: 'jpeg', class:"comment-item-profile-image-self" %>
      <span class="comment-item-hundle-name">
        <% if c.user.hundle_name.blank? %>
          名無しのユーザー
        <% else %>
          <%= c.user.hundle_name %>
        <% end %>
      </span>
    </div>
    <div class="comment-item-title">
      " <%= c.title %> "
    </div>
    <div class="comment-item-image">
      <%= attachment_image_tag c, :comment_image, size: '250x166', format: 'jpeg', fallback: "no_image.jpeg", class:"comment-image" %>
    </div>
    <div class="comment-item-text">
      <%= c.comment %>
    </div>
  </div>
  <%= link_to '削除',  dam_dam_comments_path(c), method: :delete, class:"btn btn-md-danger" %>
<% end %>
