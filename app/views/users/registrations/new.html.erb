<%= render 'layouts/header' %>
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :お名前%>（非公開）<br />
    <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :お名前ふりがな %>（非公開）<br />
    <%= f.text_field :name_kana, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>（非公開）<br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :ハンドルネーム %> ※ 後から追加できます<br />
    <%= f.text_field :hundle_name, autofocus: true, autocomplete: "email" %>
  </div>

   <div class="field">
      <%= f.label :プロフィール画像 %> ※ 後から追加できます<br />
      <%= f.attachment_field :profile_image %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>