<div class="modal fade modal-signup" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">

    <div class="modal-content modal-content-signup">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h5 class="modal-header-title">SIGN UP</h5>
      </div>

      <div class="modal-body">
        <div class="modal-body-image-signup"><%= image_tag('/images/swing1.jpeg', class:"swing1")%></div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: 'user_registration'}) do |f| %>

          <div class="modal-body-field-signup">
            <li class="modal-body-label-signup"><span class="text-danger-big">* </span><%= f.label :お名前%>（非公開）　<span class="text-danger"> *</span><span class="text-danger-small"> は必須項目です．</span></li>
            <div class="modal-body-field"><%= f.text_field :name, autofocus: true, id:"user_name_registration", class:"modal-body-field-self-re-signup" %></div>
          </div>

          <div class="modal-body-field-signup">
            <li class="modal-body-label-signup"><span class="text-danger-big">* </span><%= f.label :お名前ふりがな%>（非公開）</li>
            <div class="modal-body-field"><%= f.text_field :name_kana, id:"user_name_kana_registration", class:"modal-body-field-self-re-signup" %></div>
          </div>

          <div class="modal-body-field-signup">
            <li class="modal-body-label-signup"><span class="text-danger-big">* </span><%= f.label :メールアドレス %>（非公開）</li>
            <div class="modal-body-field"><%= f.email_field :email, id:"user_email_registration", class:"modal-body-field-self-re-signup" %></div>
          </div>

          <div class="modal-body-field-password-signup">
            <li class="modal-body-label-signup"><span class="text-danger-big">* </span><%= f.label :パスワード %>(6文字以上)</li>
            <div class="modal-body-field"><%= f.password_field :password, autocomplete: "new-password", id:"user_password_registration", class:"modal-body-field-self-re-signup" %></div>
          </div>

          <div class="modal-body-field-password-signup">
            <li class="modal-body-label-signup"><span class="text-danger-big">* </span><%= f.label :password_confirmation %>(6文字以上)</li>
            <div class="modal-body-field"><%= f.password_field :password_confirmation, autocomplete: "new-password", id:"user_password_confirmation_registration", class:"modal-body-field-self-re-signup" %></div>
          </div>

          <div class="modal-body-field-signup">
            <li class="modal-body-label-signup"><%= f.label :ニックネーム%></li>
            <div class="modal-body-field"><%= f.text_field :hundle_name,  id:"user_hundle_name_registration",class:"modal-body-field-self-re-signup" %></div>
          </div>

          <div class="modal-body-field-signup">
            <li class="modal-body-label-signup"><%= f.label :プロフィール画像 %></li>
            <div class="modal-body-attachment-field-signup"><%= f.attachment_field :profile_image, id:"user_profile_image_registration", class:"modal-body-attachment-field-self-signup" %></div>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class:"btn btn-lg btn-primary modal-body-submit-signup"  %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>